{
  "kind": "collectionType",
  "collectionName": "blogs",
  "info": {
    "singularName": "blog",
    "pluralName": "blogs",
    "displayName": "Blog"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "readTime": {
      "type": "string",
      "default": "2 mins read",
      "required": true
    },
    "author": {
      "type": "string",
      "required": true,
      "default": "Yogic Escape Berlin"
    },
    "image": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "views": {
      "type": "biginteger",
      "required": true,
      "default": "0"
    },
    "likes": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::like.like",
      "mappedBy": "blog"
    },
    "comment": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::comment.comment",
      "mappedBy": "blog"
    }
  }
}
